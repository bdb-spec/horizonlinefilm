---
import Base from '../layouts/Base.astro';

const film = {
  title: 'Raptus',
  year: 2025,
  runtime: '86 min',
  genres: ['Erotic Thriller', 'Dark Comedy'],
  director: 'Bennet de Brabandere',
  tagline: 'His controls are at her command.',
  cast: ['Ksenia Solo', 'Nolan Gerard Funk', 'Zion Forrest Lee', 'Christina Cox', 'Michael Lipka', 'Kerry-Ann James', 'Rachel Sellan'],
  logline: 'After surviving a brutal assault, Sarah orders a new form of experimental android therapy called Raptus. But instead of helping her reclaim her mind, her new companion\'s controls will be pushed to the limit, putting her in extreme danger.',
  synopsis: `After surviving a brutal assault, Sarah orders a new form of experimental android therapy called Raptus. But instead of helping her reclaim her mind, her new companion's controls will be pushed to the limit, putting her in extreme danger. Part dark comedy, part erotic thriller, Raptus is a provocative exploration of desire, consent, and what it means to be truly seen by another ‚Äî even if that other isn't human.`,
  poster: `${import.meta.env.BASE_URL}/images/raptus-poster.jpg`,
  deliverables: ['ProRes 422 HQ Master', 'DCP', 'M&E Track (Clean & DME)', 'Screener'],
  territories_available: 'Select international territories available ‚Äî contact for details.',
  // Where to watch ‚Äî US & UK platforms
  platforms: [
    { name: 'Apple TV', region: 'US / UK / CA', icon: 'üçé', rent: '#', buy: '#' },
    { name: 'Amazon Video', region: 'US', icon: '‚ñ∂', rent: '#', buy: '#' },
    { name: 'Google Play', region: 'US', icon: '‚ñ∑', rent: '#', buy: '#' },
    { name: 'YouTube', region: 'US', icon: '‚èµ', rent: '#', buy: '#' },
    { name: 'Fandango at Home', region: 'US', icon: '‚óâ', rent: '#', buy: '#' },
  ],
  // Payhip product URL for direct international purchase (set when created)
  payhipUrl: null, // e.g. 'https://payhip.com/b/XXXXX'
  letterboxd: 'https://letterboxd.com/film/raptus-2025/',
};
---
<Base
  title={`${film.title} (${film.year}) ‚Äî Horizon Line Film Company`}
  description={film.logline}
  ogImage={film.poster}
>
  <main>
    <section class="film-hero">
      <div class="container">
        <div class="hero-layout">
          <div class="hero-poster">
            <img src={film.poster} alt={`${film.title} ‚Äî Official Poster`} width="400" height="590" loading="eager" />
          </div>
          <div class="hero-info">
            <div class="film-meta">
              <span class="year">{film.year}</span>
              <span class="separator">¬∑</span>
              <span class="runtime">{film.runtime}</span>
              <span class="separator">¬∑</span>
              {film.genres.map(g => <span class="genre-tag">{g}</span>)}
            </div>
            <h1>{film.title}</h1>
            <p class="director">Directed by <strong>{film.director}</strong></p>
            <p class="starring">Starring <strong>{film.cast.join(', ')}</strong></p>
            <p class="logline-hero">{film.logline}</p>
            <div class="cta-row">
              <a href="mailto:info@horizonlinefilm.com?subject=Screener Request: Raptus" class="btn btn-primary">Request Screener</a>
              <a href="mailto:info@horizonlinefilm.com?subject=Distribution Inquiry: Raptus" class="btn btn-secondary">Distribution Inquiry</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="trailer-section">
      <div class="inner">
        <h2>Trailer</h2>
        <div class="trailer-embed">
          <iframe
            src="https://www.youtube.com/embed/tSI3klFR1FI"
            title="RAPTUS ‚Äî Official Trailer"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            referrerpolicy="strict-origin-when-cross-origin"
            allowfullscreen
          ></iframe>
        </div>
      </div>
    </section>

    <section class="synopsis-section">
      <div class="inner">
        <h2>Synopsis</h2>
        <p>{film.synopsis}</p>
      </div>
    </section>

    <section class="details-section">
      <div class="inner">
        <div class="details-grid">
          <div class="detail-block">
            <h3>Availability</h3>
            <p>Now streaming on <strong>Apple TV</strong></p>
            <p class="territory-note">{film.territories_available}</p>
          </div>
          <div class="detail-block">
            <h3>Deliverables</h3>
            <ul>
              {film.deliverables.map(d => <li>{d}</li>)}
            </ul>
          </div>
          <div class="detail-block">
            <h3>Press & Sales</h3>
            <p>For press materials, screener access, or distribution inquiries:</p>
            <p><a href="mailto:info@horizonlinefilm.com">info@horizonlinefilm.com</a></p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Movie",
    "name": film.title,
    "datePublished": String(film.year),
    "genre": film.genres,
    "director": { "@type": "Person", "name": film.director },
    "actor": film.cast.map(name => ({ "@type": "Person", "name": name })),
    "description": film.logline,
    "duration": "PT86M",
    "trailer": {
      "@type": "VideoObject",
      "name": "RAPTUS ‚Äî Official Trailer",
      "embedUrl": "https://www.youtube.com/embed/tSI3klFR1FI",
      "thumbnailUrl": "https://i.ytimg.com/vi/tSI3klFR1FI/hqdefault.jpg"
    },
    "productionCompany": {
      "@type": "Organization",
      "name": "Horizon Line Film Company",
      "url": "https://horizonlinefilm.com"
    }
  })} />
</Base>

<style>
  .film-hero {
    padding: 100px 0 60px;
  }
  .hero-layout {
    display: flex;
    gap: 48px;
    align-items: flex-start;
    max-width: 960px;
    margin: 0 auto;
  }
  .hero-poster {
    flex-shrink: 0;
  }
  .hero-poster img {
    width: 320px;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.6);
  }
  .hero-info {
    flex: 1;
    text-align: left;
  }
  .director {
    font-size: 14px;
    color: #888;
    margin-bottom: 4px;
  }
  .director strong { color: #ccc; }
  @media (max-width: 720px) {
    .hero-layout {
      flex-direction: column;
      align-items: center;
    }
    .hero-poster img { width: 260px; }
    .hero-info { text-align: center; }
    .cta-row { justify-content: center; }
    .film-meta { justify-content: center; }
  }
  .film-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 24px;
    font-size: 13px;
    color: #888;
    letter-spacing: 1px;
  }
  .genre-tag {
    background: rgba(212, 165, 116, 0.15);
    color: #d4a574;
    padding: 2px 10px;
    border-radius: 4px;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  .separator { color: #444; }
  .film-hero h1 {
    font-size: 56px;
    font-weight: 300;
    letter-spacing: 6px;
    text-transform: uppercase;
    color: #fff;
    margin-bottom: 12px;
  }
  .starring {
    font-size: 16px;
    color: #888;
    margin-bottom: 20px;
  }
  .starring strong { color: #ccc; }
  .logline-hero {
    font-size: 17px;
    color: #aaa;
    max-width: 520px;
    margin: 0 0 32px;
    line-height: 1.6;
    font-style: italic;
  }
  .cta-row {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }
  .btn {
    display: inline-block;
    padding: 12px 32px;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 2px;
    text-transform: uppercase;
    border-radius: 6px;
    transition: all 0.2s;
  }
  .btn-primary {
    background: #d4a574;
    color: #0a0a0a;
  }
  .btn-primary:hover {
    background: #e8c49a;
    color: #0a0a0a;
  }
  .btn-secondary {
    border: 1px solid #444;
    color: #ccc;
  }
  .btn-secondary:hover {
    border-color: #d4a574;
    color: #d4a574;
  }
  .trailer-section, .synopsis-section, .details-section {
    border-top: 1px solid #1a1a1a;
  }
  .trailer-embed {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
    height: 0;
    max-width: 800px;
  }
  .trailer-embed iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 8px;
  }
  .inner {
    max-width: 1100px;
    margin: 0 auto;
    padding: 60px 24px;
  }
  .synopsis-section h2, .details-section h3 {
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: #666;
    margin-bottom: 20px;
  }
  .synopsis-section p {
    font-size: 17px;
    color: #bbb;
    max-width: 680px;
    line-height: 1.8;
  }
  .details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 40px;
  }
  .detail-block p, .detail-block li {
    font-size: 15px;
    color: #aaa;
    line-height: 1.6;
  }
  .detail-block ul {
    list-style: none;
    padding: 0;
  }
  .detail-block li::before {
    content: '‚Äî  ';
    color: #444;
  }
  .territory-note {
    margin-top: 8px;
    font-size: 13px;
    color: #666;
    font-style: italic;
  }
</style>
