---
import Base from '../layouts/Base.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---
<Base title="Horizon Line Film Company" description="Independent film production and distribution. Toronto-based. Genre-forward.">
  <main>
    <section class="hero">
      <div class="container">
        <img src={`${base}/images/logo.png`} alt="Horizon Line Film Company" class="hero-logo" />
      </div>
    </section>

    <section class="now-streaming">
      <div class="container">
        <a href={`${base}/raptus`} class="film-card">
          <div class="film-badge">Now Streaming</div>
          <h3>Raptus</h3>
          <p class="genre">Erotic Thriller / Dark Comedy</p>
          <p class="cast">Starring Ksenia Solo</p>
          <p class="logline">A sex bot therapist navigates the space between transgression and tenderness.</p>
        </a>
        <p class="slate-note">Full slate available by request: <a href="mailto:info@horizonlinefilms.com">info@horizonlinefilms.com</a></p>
      </div>
    </section>
  </main>
</Base>

<style>
  .hero {
    padding: 100px 0 80px;
    text-align: center;
  }
  .hero-logo {
    width: 630px;
    height: auto;
    margin-bottom: 32px;
    opacity: 0.9;
  }
  .hero h1 {
    font-size: 48px;
    font-weight: 300;
    letter-spacing: 8px;
    text-transform: uppercase;
    color: #fff;
    margin-bottom: 16px;
  }
  .hero .subtitle {
    font-size: 16px;
    color: #888;
    letter-spacing: 2px;
  }
  .now-streaming {
    padding: 60px 0 80px;
  }
  .now-streaming .container {
    max-width: 480px;
  }
  .film-card {
    display: block;
    padding: 32px;
    border: 1px solid #222;
    border-radius: 8px;
    transition: border-color 0.2s, transform 0.2s;
    color: #e5e5e5;
    position: relative;
  }
  .film-card:hover {
    border-color: #d4a574;
    transform: translateY(-2px);
    color: #e5e5e5;
  }
  .film-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    background: #d4a574;
    color: #0a0a0a;
    font-size: 10px;
    font-weight: 600;
    letter-spacing: 1px;
    text-transform: uppercase;
    padding: 4px 10px;
    border-radius: 4px;
  }
  .film-card h3 {
    font-size: 28px;
    font-weight: 600;
    color: #fff;
    margin-bottom: 8px;
  }
  .film-card .genre {
    font-size: 13px;
    color: #d4a574;
    letter-spacing: 1px;
    margin-bottom: 4px;
  }
  .film-card .cast {
    font-size: 13px;
    color: #888;
    margin-bottom: 12px;
  }
  .film-card .logline {
    font-size: 15px;
    color: #aaa;
    line-height: 1.5;
  }
  .slate-note {
    margin-top: 24px;
    font-size: 13px;
    color: #555;
    letter-spacing: 0.5px;
  }
</style>
