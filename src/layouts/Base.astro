---
interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = 'Horizon Line Film Company â€” Independent film production and distribution.', ogImage } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="Horizon Line Film Company" />
  {ogImage && <meta property="og:image" content={ogImage} />}
  <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    html { font-family: 'Inter', system-ui, sans-serif; background: #0a0908; color: #e5e5e5; }
    body { min-height: 100vh; line-height: 1.6; -webkit-font-smoothing: antialiased; }
    a { color: #d4a574; text-decoration: none; transition: color 0.2s; }
    a:hover { color: #e8c49a; }
    img { max-width: 100%; height: auto; }
    .container { max-width: 1100px; margin: 0 auto; padding: 0 24px; }
    nav {
      position: absolute;
      top: 0; left: 0; right: 0;
      z-index: 10;
      padding: 24px 0;
    }
    nav .container { display: flex; justify-content: space-between; align-items: center; }
    nav .logo {
      display: flex; align-items: center; gap: 12px;
      font-size: 11px; font-weight: 600; letter-spacing: 4px;
      text-transform: uppercase; color: rgba(255,255,255,0.7);
    }
    nav .logo:hover { color: #fff; }
    nav .logo img { height: 28px; width: auto; opacity: 0.8; }
    nav .links { display: flex; gap: 28px; font-size: 11px; letter-spacing: 2px; text-transform: uppercase; }
    nav .links a { color: rgba(255,255,255,0.4); font-weight: 500; }
    nav .links a:hover { color: #d4a574; }
    .dropdown { position: relative; }
    .dropdown-menu {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      margin-top: 12px;
      background: #151513;
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: 6px;
      padding: 8px 0;
      min-width: 160px;
      z-index: 20;
    }
    .dropdown:hover .dropdown-menu { display: block; }
    .dropdown-menu a {
      display: block;
      padding: 8px 16px;
      font-size: 11px;
      letter-spacing: 1px;
      white-space: nowrap;
    }
    .dropdown-menu a:hover { background: rgba(255,255,255,0.04); }
    footer {
      padding: 48px 24px;
      border-top: 1px solid rgba(255,255,255,0.05);
      text-align: center;
      font-size: 12px;
      color: #444;
      letter-spacing: 1px;
    }
  </style>
</head>
<body>
  <nav>
    <div class="container">
      <a href={`${base}/`} class="logo"><img src={`${base}/images/logo.png`} alt="Horizon Line Film Company" /> Horizon Line</a>
      <div class="links">
        <div class="dropdown">
          <a href={`${base}/raptus`} class="dropdown-toggle">Watch</a>
          <div class="dropdown-menu">
            <a href={`${base}/raptus`}>Raptus (2025)</a>
          </div>
        </div>
        <a href="mailto:info@horizonlinefilms.com">Contact</a>
      </div>
    </div>
  </nav>
  <slot />
  <footer>
    <div class="container">
      <p>&copy; {new Date().getFullYear()} Horizon Line Film Company. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
